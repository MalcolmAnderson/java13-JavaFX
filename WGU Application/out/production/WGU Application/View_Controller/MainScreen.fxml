<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="385.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View_Controller.MainScreenController">
   <children>
      <VBox prefWidth="800.0" spacing="10.0">
         <children>
            <Label text="Inventory Management System">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </Label>
            <HBox prefHeight="300.0" prefWidth="800.0">
               <children>
                  <VBox prefHeight="200.0" prefWidth="400.0" spacing="10.0">
                     <children>
                        <HBox spacing="10.0">
                           <children>
                              <Label text="Parts">
                                 <font>
                                    <Font name="System Bold" size="18.0" />
                                 </font>
                                 <padding>
                                    <Insets left="10.0" right="90.0" />
                                 </padding>
                              </Label>
                              <Button fx:id="buttonPartSearch" mnemonicParsing="false" onAction="#OnButtonClicked_PartSearch" text="Search">
                                 <HBox.margin>
                                    <Insets left="20.0" />
                                 </HBox.margin>
                              </Button>
                              <TextField fx:id="textPartSearch" alignment="TOP_LEFT" onAction="#handleAction_PartSearch" />
                           </children>
                        </HBox>
                        <ListView fx:id="lv_Parts" prefHeight="300.0" prefWidth="400.0" />
                        <HBox alignment="TOP_RIGHT" prefWidth="200.0" spacing="10.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#DoSomeTesting" text="Add Part - Only" />
                              <Button fx:id="buttonPartAdd" mnemonicParsing="false" onMouseClicked="#OnMouseClicked_PartAdd" text="Add" />
                              <Button fx:id="buttonPartModify" mnemonicParsing="false" onAction="#OnButtonClicked_PartModify" text="Modify" />
                              <Button fx:id="buttonPartDelete" mnemonicParsing="false" onAction="#OnButtonClicked_PartDelete" text="Delete" />
                           </children>
                           <padding>
                              <Insets right="10.0" />
                           </padding>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="400.0" spacing="10.0">
                     <children>
                        <HBox spacing="10.0">
                           <children>
                              <Label text="Products">
                                 <font>
                                    <Font name="System Bold" size="18.0" />
                                 </font>
                                 <padding>
                                    <Insets left="10.0" right="84.0" />
                                 </padding>
                              </Label>
                              <Button fx:id="buttonProductSearch" mnemonicParsing="false" onAction="#OnButtonClicked_ProductSearch" text="Search" />
                              <TextField fx:id="textProductSearch" onAction="#handleAction_ProductSearch" />
                           </children>
                        </HBox>
                        <ListView fx:id="lv_Products" prefHeight="300.0" prefWidth="400.0" />
                        <HBox alignment="TOP_RIGHT" prefWidth="200.0" spacing="10.0">
                           <children>
                              <Button fx:id="buttonProductAdd" mnemonicParsing="false" onAction="#OnButtonClicked_ProductAdd" text="Add" />
                              <Button fx:id="buttonProductModify" mnemonicParsing="false" onAction="#OnButtonClicked_ProductModify" text="Modify" />
                              <Button fx:id="buttonProductDelete" mnemonicParsing="false" onAction="#OnButtonClicked_ProductDelete" text="Delete" />
                           </children>
                           <padding>
                              <Insets right="10.0" />
                           </padding>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="TOP_RIGHT" prefWidth="200.0">
               <children>
                  <Button fx:id="buttonExit" mnemonicParsing="false" onAction="#OnButtonClicked_Exit" text="Exit" />
               </children>
               <padding>
                  <Insets right="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
