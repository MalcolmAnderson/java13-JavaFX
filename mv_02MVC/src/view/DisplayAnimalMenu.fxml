<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="250.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AnimalDetailController">
   <children>
      <TableView fx:id="animalTableView" prefHeight="200.0" prefWidth="200.0">
        <columns>
          <TableColumn fx:id="animalIdCol" prefWidth="120.0" text="ID" />
          <TableColumn fx:id="breedCol" prefWidth="120.0" text="Breed" />
            <TableColumn fx:id="lifespanCol" prefWidth="120.0" text="Lifespan" />
            <TableColumn fx:id="priceCol" prefWidth="120.0" text="Price" />
        </columns>
         <padding>
            <Insets left="10.0" right="10.0" top="20.0" />
         </padding>
      </TableView>
      <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
         <children>
            <Button mnemonicParsing="false" text="Details">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" text="Back">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets right="20.0" />
         </padding>
      </HBox>
   </children>
</VBox>
